{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "HEYGEN_API_KEY",
    "HEYGEN_API_URL",
    "HEYGEN_AVATAR_ID",
    "HEYGEN_VOICE_ID",
    "HEYGEN_LANGUAGE"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "lib/**"
      ],
      "env": [
        "HEYGEN_API_KEY",
        "HEYGEN_API_URL",
        "HEYGEN_AVATAR_ID",
        "HEYGEN_VOICE_ID",
        "HEYGEN_LANGUAGE"
      ]
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "typecheck": {
      "dependsOn": [
        "^build",
        "^typecheck"
      ]
    },
    "test": {
      "dependsOn": [
        "^test"
      ]
    }
  }
}